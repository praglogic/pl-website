---
const currentPath = Astro.url.pathname;
---

<nav class="nav">
  <div class="container nav-container">
    <a href="/" class="logo">
      <img src="/images/logo-full-image.png" alt="Pragmatic Logic - Human Ingenuity + AI Symbiosis" class="logo-image" />
    </a>
    
    <div class="nav-links">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
      <a href="/product" class={currentPath === '/product' || currentPath === '/lilo-solace' || currentPath === '/technology' || currentPath === '/evidence' || currentPath === '/clinical-evidence' ? 'active' : ''}>Product</a>
      <a href="/research" class={currentPath === '/research' ? 'active' : ''}>Research</a>
      <a href="/company" class={currentPath === '/company' || currentPath === '/about' ? 'active' : ''}>Company</a>
    </div>

    <div class="nav-actions">
      <a href="/contact" class="btn-primary">Join the Community</a>
    </div>
    
    <button class="mobile-menu-toggle" aria-label="Toggle mobile menu" id="mobileMenuToggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
  
  <!-- Mobile Menu Drawer -->
  <div class="mobile-menu" id="mobileMenu">
    <div class="mobile-menu-header">
      <img src="/images/logo-full-image.png" alt="Pragmatic Logic - Human Ingenuity + AI Symbiosis" class="mobile-menu-logo" />
      <button class="mobile-menu-close" aria-label="Close mobile menu" id="mobileMenuClose">
        Done
      </button>
    </div>
    <nav class="mobile-menu-nav">
      <a href="/" class={currentPath === '/' ? 'mobile-nav-link active' : 'mobile-nav-link'}>Home</a>
      <a href="/product" class={currentPath === '/product' || currentPath === '/lilo-solace' || currentPath === '/technology' || currentPath === '/evidence' || currentPath === '/clinical-evidence' ? 'mobile-nav-link active' : 'mobile-nav-link'}>Product</a>
      <a href="/research" class={currentPath === '/research' ? 'mobile-nav-link active' : 'mobile-nav-link'}>Research</a>
      <a href="/company" class={currentPath === '/company' || currentPath === '/about' ? 'mobile-nav-link active' : 'mobile-nav-link'}>Company</a>
      <a href="/contact" class="mobile-nav-cta">Join the Community</a>
    </nav>
  </div>
  <div class="mobile-menu-overlay" id="mobileMenuOverlay"></div>
</nav>

<script>
  // Mobile menu functionality
  const mobileMenuToggle = document.getElementById('mobileMenuToggle');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileMenuClose = document.getElementById('mobileMenuClose');
  const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
  
  function openMobileMenu() {
    mobileMenu?.classList.add('active');
    mobileMenuOverlay?.classList.add('active');
    document.body.style.overflow = 'hidden';
  }
  
  function closeMobileMenu() {
    mobileMenu?.classList.remove('active');
    mobileMenuOverlay?.classList.remove('active');
    document.body.style.overflow = '';
  }
  
  mobileMenuToggle?.addEventListener('click', openMobileMenu);
  mobileMenuClose?.addEventListener('click', closeMobileMenu);
  mobileMenuOverlay?.addEventListener('click', closeMobileMenu);
  
  // Close menu on navigation
  document.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', closeMobileMenu);
  });
  
  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu?.classList.contains('active')) {
      closeMobileMenu();
    }
  });
</script>

<style>
  /* ==========================================
     NAVIGATION - Apple-inspired
     ========================================== */

  .nav {
    background: rgba(251, 251, 253, 0.8);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(0, 0, 0, 0.04);
    position: sticky;
    top: 0;
    z-index: var(--z-sticky, 200);
    transition: all var(--duration-normal, 0.25s) var(--ease-out, cubic-bezier(0.25, 0.46, 0.45, 0.94));
  }

  .nav.scrolled {
    background: rgba(255, 255, 255, 0.92);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.06);
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 var(--space-6, 1.5rem);
    height: 52px;
    max-width: 1120px;
    margin: 0 auto;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity var(--duration-fast, 0.15s) var(--ease-out);
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-image {
    height: 32px;
    width: auto;
    max-width: 200px;
    object-fit: contain;
    display: block;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-8, 2rem);
  }

  .nav-links a {
    text-decoration: none;
    color: var(--color-text, #1d1d1f);
    font-weight: 400;
    font-size: 14px;
    transition: all var(--duration-fast, 0.15s) var(--ease-out);
    position: relative;
    padding: 6px 0;
    letter-spacing: -0.01em;
  }

  .nav-links a:hover {
    color: var(--color-text-secondary, #6e6e73);
  }

  .nav-links a.active {
    color: var(--color-text, #1d1d1f);
    font-weight: 500;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: var(--space-4, 1rem);
  }

  /* Apple-style CTA button */
  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    border-radius: 980px;
    text-decoration: none;
    font-weight: 400;
    font-size: 14px;
    transition: all var(--duration-normal, 0.25s) var(--ease-out);
    border: none;
    background: var(--color-primary, #0071e3);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark, #0058b0);
  }

  .btn-primary:active {
    transform: scale(0.98);
  }

  /* Mobile menu toggle - Apple hamburger style */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    width: 44px;
    height: 44px;
    border-radius: var(--radius-md, 8px);
    transition: background var(--duration-fast, 0.15s) var(--ease-out);
  }

  .mobile-menu-toggle:hover {
    background: rgba(0, 0, 0, 0.04);
  }

  .mobile-menu-toggle span {
    width: 18px;
    height: 1.5px;
    background: var(--color-text, #1d1d1f);
    border-radius: 1px;
    transition: all var(--duration-normal, 0.25s) var(--ease-out);
  }

  /* Mobile Menu Drawer - Apple sheet style */
  .mobile-menu {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    z-index: 1000;
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.32, 0.72, 0, 1);
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.3);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 999;
  }

  .mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px var(--space-6, 1.5rem);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    height: 52px;
  }

  .mobile-menu-logo {
    height: 28px;
    width: auto;
    max-width: 160px;
    object-fit: contain;
    display: block;
  }

  .mobile-menu-close {
    background: none;
    border: none;
    color: var(--color-primary, #0071e3);
    cursor: pointer;
    padding: 8px;
    font-size: 17px;
    font-weight: 400;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity var(--duration-fast, 0.15s) var(--ease-out);
    border-radius: var(--radius-md, 8px);
  }

  .mobile-menu-close:hover {
    opacity: 0.7;
  }

  .mobile-menu-nav {
    display: flex;
    flex-direction: column;
    padding: var(--space-4, 1rem) 0;
  }

  .mobile-nav-link {
    padding: 14px var(--space-6, 1.5rem);
    color: var(--color-text, #1d1d1f);
    text-decoration: none;
    font-size: 17px;
    font-weight: 600;
    letter-spacing: -0.01em;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    transition: background var(--duration-fast, 0.15s) var(--ease-out);
    min-height: 48px;
    display: flex;
    align-items: center;
  }

  .mobile-nav-link:hover,
  .mobile-nav-link:active {
    background: rgba(0, 0, 0, 0.03);
  }

  .mobile-nav-link.active {
    color: var(--color-primary, #0071e3);
  }

  .mobile-nav-cta {
    margin: var(--space-6, 1.5rem);
    padding: 14px var(--space-6, 1.5rem);
    background: var(--color-primary, #0071e3);
    color: white;
    text-decoration: none;
    font-size: 17px;
    font-weight: 400;
    border-radius: 12px;
    text-align: center;
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--duration-normal, 0.25s) var(--ease-out);
  }

  .mobile-nav-cta:hover,
  .mobile-nav-cta:active {
    background: var(--color-primary-dark, #0058b0);
  }

  @media (max-width: 834px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .nav-actions .btn-primary {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .nav-container {
      padding: 0 var(--space-4, 1rem);
    }

    .logo-image {
      height: 28px;
      max-width: 160px;
    }
  }
</style>
