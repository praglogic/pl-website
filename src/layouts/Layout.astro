---
export interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "Pragmatic Logic - Symbiotic AI for Healthcare. Clinical-grade therapeutic AI that reduces crisis interventions by 40% while keeping families connected.", image = "/og-image.png" } = Astro.props;
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : new URL(Astro.url.pathname, `http://localhost:4321`);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content="therapeutic AI, healthcare AI, mental health AI, senior care AI, crisis detection, suicide prevention AI, mental health monitoring, assisted living technology, senior care software, elderly care AI, AI companion for seniors, therapeutic AI companion, conversational AI healthcare, HIPAA compliant AI" />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

		<!-- Schema.org Structured Data -->
		<script type="application/ld+json" is:inline set:html={`{"@context":"https://schema.org","@type":"Organization","name":"Pragmatic Logic","url":"https://pragmaticlogic.ai","logo":"https://pragmaticlogic.ai/favicon.svg","description":"Clinical-grade therapeutic AI companion for senior care and assisted living. Deterministic safety pipeline with 100% crisis recall across 3,720 scenarios.","sameAs":[],"contactPoint":{"@type":"ContactPoint","email":"contact@pragmaticlogic.ai","contactType":"customer service"}}`} />
		<script type="application/ld+json" is:inline set:html={`{"@context":"https://schema.org","@type":"SoftwareApplication","name":"Lilo Solace","applicationCategory":"HealthApplication","operatingSystem":"Web","description":"Therapeutic AI companion for senior mental health. 100% crisis recall, 28.7ms detection latency, deterministic 5-layer safety pipeline. HIPAA compliant.","offers":{"@type":"Offer","price":"500","priceCurrency":"USD","priceValidUntil":"2026-12-31"},"aggregateRating":{"@type":"AggregateRating","ratingValue":"4.9","ratingCount":"250"},"featureList":["100% Crisis Recall (3,720 scenarios)","28.7ms Detection Latency","5-Layer Deterministic Safety Pipeline","13 Validated Clinical Instruments","HIPAA Compliant On-Premise","Voice-first Senior Interface"]}`} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* ==========================================
		   APPLE-INSPIRED DESIGN SYSTEM
		   Refined colors, generous spacing, subtle depth
		   ========================================== */

		/* Premium Dark Bands (Lucid-style, clinical blue-black) */
		--color-premium-dark: #070B14;
		--color-premium-dark-text: #eaf0ff;
		--color-premium-dark-muted: rgba(234, 240, 255, 0.72);
		--color-premium-dark-hairline: rgba(234, 240, 255, 0.12);
		--color-premium-dark-surface: rgba(255, 255, 255, 0.06);

		/* Primary Palette - Apple Blue refined */
		--color-primary: #0071e3;
		--color-primary-light: #42a5f5;
		--color-primary-dark: #0058b0;
		--color-primary-subtle: rgba(0, 113, 227, 0.08);
		--color-accent-blue: #2563eb;
		--color-accent-green: #10b981;

		/* Secondary - Teal accent */
		--color-secondary: #00c7be;
		--color-secondary-light: #5dd5cf;
		--color-secondary-dark: #009e97;

		/* Semantic Colors */
		--color-success: #30d158;
		--color-warning: #ff9f0a;
		--color-error: #ff453a;
		--color-info: #64d2ff;

		/* Text Hierarchy - Apple-style grays */
		--color-text: #1d1d1f;
		--color-text-secondary: #6e6e73;
		--color-text-tertiary: #86868b;
		--color-text-quaternary: #aeaeb2;
		--color-text-light: #6e6e73;

		/* Backgrounds - Subtle warmth */
		--color-background: #ffffff;
		--color-background-secondary: #f5f5f7;
		--color-background-tertiary: #fbfbfd;
		--color-background-elevated: #ffffff;
		--color-background-warm: #fefcfa;
		--color-background-soft: #f7f8fa;
		--color-background-alt: #f5f5f7;

		/* Borders - Ultra subtle */
		--color-border: #d2d2d7;
		--color-border-light: #e8e8ed;
		--color-border-subtle: #f0f0f5;

		/* Gradients - Apple style */
		--gradient-primary: linear-gradient(135deg, #0071e3 0%, #00c7be 100%);
		--gradient-hero: linear-gradient(180deg, #fbfbfd 0%, #ffffff 100%);
		--gradient-card: linear-gradient(180deg, #ffffff 0%, #f5f5f7 100%);
		--gradient-text: linear-gradient(90deg, #0071e3 0%, #00c7be 100%);

		/* Typography - SF Pro-like with Inter */
		--font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', sans-serif;
		--font-size-xs: 0.75rem;    /* 12px */
		--font-size-sm: 0.8125rem;  /* 13px */
		--font-size-base: 0.9375rem; /* 15px - Apple's preferred body size */
		--font-size-md: 1rem;        /* 16px */
		--font-size-lg: 1.0625rem;   /* 17px */
		--font-size-xl: 1.25rem;     /* 20px */
		--font-size-2xl: 1.5rem;     /* 24px */
		--font-size-3xl: 2rem;       /* 32px */
		--font-size-4xl: 2.5rem;     /* 40px */
		--font-size-5xl: 3rem;       /* 48px */
		--font-size-6xl: 3.5rem;     /* 56px */

		/* Font Weights */
		--font-weight-regular: 400;
		--font-weight-medium: 500;
		--font-weight-semibold: 600;
		--font-weight-bold: 700;

		/* Line Heights */
		--line-height-tight: 1.1;
		--line-height-snug: 1.25;
		--line-height-normal: 1.5;
		--line-height-relaxed: 1.7;

		/* Letter Spacing */
		--tracking-tighter: -0.03em;
		--tracking-tight: -0.02em;
		--tracking-normal: -0.01em;
		--tracking-wide: 0.01em;

		/* Spacing - 8pt grid, generous */
		--space-1: 0.25rem;   /* 4px */
		--space-2: 0.5rem;    /* 8px */
		--space-3: 0.75rem;   /* 12px */
		--space-4: 1rem;      /* 16px */
		--space-5: 1.25rem;   /* 20px */
		--space-6: 1.5rem;    /* 24px */
		--space-8: 2rem;      /* 32px */
		--space-10: 2.5rem;   /* 40px */
		--space-12: 3rem;     /* 48px */
		--space-16: 4rem;     /* 64px */
		--space-20: 5rem;     /* 80px */
		--space-24: 6rem;     /* 96px */
		--space-32: 8rem;     /* 128px */

		/* Shadows - Apple's subtle depth */
		--shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04);
		--shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);
		--shadow-md: 0 4px 16px rgba(0, 0, 0, 0.06);
		--shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.08);
		--shadow-xl: 0 16px 48px rgba(0, 0, 0, 0.10);
		--shadow-2xl: 0 24px 64px rgba(0, 0, 0, 0.12);
		--shadow-inner: inset 0 2px 4px rgba(0, 0, 0, 0.04);
		--shadow-glow: 0 0 40px rgba(0, 113, 227, 0.15);
		--shadow-glow-strong: 0 0 60px rgba(0, 113, 227, 0.25);

		/* Border Radius - More rounded, Apple-like */
		--radius-xs: 4px;
		--radius-sm: 6px;
		--radius-md: 8px;
		--radius-lg: 12px;
		--radius-xl: 16px;
		--radius-2xl: 20px;
		--radius-3xl: 24px;
		--radius-full: 9999px;

		/* Transitions - Smooth, Apple-like */
		--duration-fast: 0.15s;
		--duration-normal: 0.25s;
		--duration-slow: 0.4s;
		--duration-slower: 0.6s;
		--ease-out: cubic-bezier(0.25, 0.46, 0.45, 0.94);
		--ease-in-out: cubic-bezier(0.65, 0, 0.35, 1);
		--ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
		--ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);

		/* Z-Index Scale */
		--z-dropdown: 100;
		--z-sticky: 200;
		--z-modal: 300;
		--z-tooltip: 400;

		/* Glassmorphism */
		--glass-background: rgba(255, 255, 255, 0.72);
		--glass-background-dark: rgba(29, 29, 31, 0.72);
		--glass-blur: blur(20px) saturate(180%);
		--glass-border: 1px solid rgba(255, 255, 255, 0.18);
	}
	
	/* ==========================================
	   BASE STYLES - Apple-inspired
	   ========================================== */

	html {
		font-family: var(--font-family), sans-serif;
		scroll-behavior: smooth;
		font-size: 16px;
		text-rendering: optimizeLegibility;
		-webkit-text-size-adjust: 100%;
	}

	body {
		margin: 0;
		padding: 0;
		background-color: var(--color-background-soft, var(--color-background));
		color: var(--color-text);
		font-size: var(--font-size-base);
		line-height: var(--line-height-relaxed);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		overflow-x: hidden;
		font-feature-settings: 'kern' 1, 'liga' 1;
	}

	/* ==========================================
	   PREMIUM DARK BANDS (Lucid-style)
	   ========================================== */

	.pl-dark-band {
		background: var(--color-premium-dark);
		color: var(--color-premium-dark-text);
		position: relative;
		overflow: hidden;
	}

	.pl-dark-band.pl-dark-glow::before {
		content: '';
		position: absolute;
		inset: 0;
		background: radial-gradient(80% 60% at 50% 0%, rgba(37, 99, 235, 0.18), transparent 60%);
		pointer-events: none;
	}

	.pl-dark-text-muted {
		color: var(--color-premium-dark-muted);
	}

	.pl-dark-hairline {
		border-color: var(--color-premium-dark-hairline);
	}

	* {
		box-sizing: border-box;
	}

	/* Typography - Apple-style hierarchy */
	h1, h2, h3, h4, h5, h6 {
		line-height: var(--line-height-tight);
		font-weight: var(--font-weight-bold);
		letter-spacing: var(--tracking-tight);
		margin-top: 0;
		color: var(--color-text);
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		letter-spacing: var(--tracking-tighter);
		margin-bottom: var(--space-6);
		font-weight: var(--font-weight-bold);
	}

	h2 {
		font-size: clamp(1.75rem, 4vw, 2.5rem);
		margin-bottom: var(--space-5);
	}

	h3 {
		font-size: clamp(1.375rem, 3vw, 1.75rem);
		margin-bottom: var(--space-4);
	}

	h4 {
		font-size: clamp(1.125rem, 2vw, 1.25rem);
		margin-bottom: var(--space-3);
	}

	p {
		font-size: var(--font-size-base);
		line-height: var(--line-height-relaxed);
		margin-bottom: var(--space-6);
		color: var(--color-text-secondary);
	}

	/* Improve readability for long-form content */
	article p {
		max-width: 65ch;
	}

	/* Lead paragraphs - Apple style */
	.lead {
		font-size: clamp(1.125rem, 2.5vw, 1.375rem);
		line-height: 1.6;
		font-weight: var(--font-weight-regular);
		color: var(--color-text-secondary);
		letter-spacing: var(--tracking-normal);
	}

	/* Links - Subtle, refined */
	a {
		color: var(--color-primary);
		text-decoration: none;
		transition: color var(--duration-fast) var(--ease-out);
	}

	a:hover {
		color: var(--color-primary-dark);
	}

	/* Focus styles for accessibility - Apple-style ring */
	:focus-visible {
		outline: none;
		box-shadow: 0 0 0 4px var(--color-primary-subtle),
					0 0 0 2px var(--color-primary);
		border-radius: var(--radius-sm);
	}

	/* Smooth transitions for interactive elements */
	a, button, input, textarea, select {
		transition: all var(--duration-normal) var(--ease-out);
	}

	/* Selection - Apple blue */
	::selection {
		background: var(--color-primary);
		color: white;
	}

	/* ==========================================
	   ANIMATIONS - Smooth, Apple-like
	   ========================================== */

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(16px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slideInUp {
		from {
			opacity: 0;
			transform: translateY(24px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes scaleIn {
		from {
			opacity: 0;
			transform: scale(0.96);
		}
		to {
			opacity: 1;
			transform: scale(1);
		}
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-8px);
		}
	}

	@keyframes pulse {
		0%, 100% {
			opacity: 1;
		}
		50% {
			opacity: 0.7;
		}
	}

	@keyframes shimmer {
		0% {
			background-position: -200% 0;
		}
		100% {
			background-position: 200% 0;
		}
	}

	/* ==========================================
	   LAYOUT UTILITIES
	   ========================================== */

	.container {
		max-width: 1120px;
		margin: 0 auto;
		padding: 0 clamp(var(--space-4), 5vw, var(--space-8));
	}

	.container-wide {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 clamp(var(--space-4), 5vw, var(--space-8));
	}

	.container-narrow {
		max-width: 720px;
		margin: 0 auto;
		padding: 0 clamp(var(--space-4), 5vw, var(--space-6));
	}

	/* Section spacing - Generous Apple-style */
	.section {
		padding: var(--space-24) 0;
	}

	.section-sm {
		padding: var(--space-16) 0;
	}

	.section-lg {
		padding: var(--space-32) 0;
	}

	/* ==========================================
	   TYPOGRAPHY UTILITIES
	   ========================================== */

	.text-center { text-align: center; }
	.text-left { text-align: left; }
	.text-right { text-align: right; }

	.text-gradient {
		background: var(--gradient-text);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.text-primary { color: var(--color-primary); }
	.text-secondary { color: var(--color-text-secondary); }
	.text-tertiary { color: var(--color-text-tertiary); }

	/* ==========================================
	   ANIMATION UTILITIES
	   ========================================== */

	.fade-in {
		animation: fadeIn 0.5s var(--ease-out) forwards;
	}

	.slide-in-up {
		animation: slideInUp 0.6s var(--ease-out) forwards;
	}

	.scale-in {
		animation: scaleIn 0.4s var(--ease-out) forwards;
	}

	.animate-float {
		animation: float 4s ease-in-out infinite;
	}

	/* Stagger delays */
	.delay-1 { animation-delay: 0.1s; }
	.delay-2 { animation-delay: 0.2s; }
	.delay-3 { animation-delay: 0.3s; }
	.delay-4 { animation-delay: 0.4s; }
	.delay-5 { animation-delay: 0.5s; }

	/* ==========================================
	   BUTTON SYSTEM - Apple-inspired
	   ========================================== */

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-2);
		padding: var(--space-3) var(--space-6);
		font-size: var(--font-size-base);
		font-weight: var(--font-weight-medium);
		line-height: 1;
		text-decoration: none;
		border-radius: var(--radius-full);
		border: none;
		cursor: pointer;
		transition: all var(--duration-normal) var(--ease-out);
		white-space: nowrap;
	}

	.btn-primary {
		background: var(--color-primary);
		color: white;
		box-shadow: var(--shadow-sm);
	}

	.btn-primary:hover {
		background: var(--color-primary-dark);
		transform: translateY(-1px);
		box-shadow: var(--shadow-md);
	}

	.btn-primary:active {
		transform: translateY(0);
		box-shadow: var(--shadow-sm);
	}

	.btn-secondary {
		background: var(--color-background-secondary);
		color: var(--color-text);
		border: 1px solid var(--color-border-light);
	}

	.btn-secondary:hover {
		background: var(--color-border-light);
		border-color: var(--color-border);
	}

	.btn-ghost {
		background: transparent;
		color: var(--color-primary);
	}

	.btn-ghost:hover {
		background: var(--color-primary-subtle);
	}

	.btn-lg {
		padding: var(--space-4) var(--space-8);
		font-size: var(--font-size-lg);
	}

	.btn-sm {
		padding: var(--space-2) var(--space-4);
		font-size: var(--font-size-sm);
	}

	/* ==========================================
	   CARD SYSTEM - Apple depth
	   ========================================== */

	.card {
		background: var(--color-background);
		border-radius: var(--radius-xl);
		border: 1px solid var(--color-border-light);
		padding: var(--space-6);
		transition: all var(--duration-normal) var(--ease-out);
	}

	.card:hover {
		border-color: var(--color-border);
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}

	.card-elevated {
		background: var(--color-background);
		border-radius: var(--radius-xl);
		box-shadow: var(--shadow-lg);
		padding: var(--space-6);
		border: none;
	}

	.card-glass {
		background: var(--glass-background);
		backdrop-filter: var(--glass-blur);
		border-radius: var(--radius-xl);
		border: var(--glass-border);
		padding: var(--space-6);
	}

	/* ==========================================
	   ACCESSIBILITY
	   ========================================== */

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	/* Reduced motion */
	@media (prefers-reduced-motion: reduce) {
		*,
		*::before,
		*::after {
			animation-duration: 0.01ms !important;
			animation-iteration-count: 1 !important;
			transition-duration: 0.01ms !important;
			scroll-behavior: auto !important;
		}
	}

	/* High contrast mode */
	@media (prefers-contrast: more) {
		:root {
			--color-border: #1d1d1f;
			--color-text-secondary: #1d1d1f;
		}
	}
</style>
