---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Sign In - Confidential Access | Pragmatic Logic">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <a href="/" class="logo-link">
          <img src="/favicon.svg" alt="Pragmatic Logic" class="logo" />
        </a>
        <h1>Confidential Access</h1>
        <p class="subtitle">Sign in to view protected architecture documents</p>
      </div>

      <div id="auth-message" class="message hidden"></div>

      <form id="signin-form" class="auth-form">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            placeholder="you@company.com"
            autocomplete="email"
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required 
            placeholder="Enter your password"
            autocomplete="current-password"
          />
        </div>

        <button type="submit" class="btn-submit" id="submit-btn">
          <span class="btn-text">Sign In</span>
          <span class="btn-loading hidden">
            <svg class="spinner" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-linecap="round" stroke-dasharray="32" stroke-dashoffset="32">
                <animate attributeName="stroke-dashoffset" values="32;0" dur="0.8s" repeatCount="indefinite"/>
              </circle>
            </svg>
            Signing in...
          </span>
        </button>
      </form>

      <div class="auth-divider">
        <span>or</span>
      </div>

      <button id="magic-link-btn" class="btn-magic-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
          <polyline points="22,6 12,13 2,6"/>
        </svg>
        Send Magic Link
      </button>

      <div class="auth-footer">
        <p>Don't have an account? <a href="/auth/signup">Request Access</a></p>
        <p class="security-note">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
          </svg>
          Secure, encrypted connection
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from '../../lib/supabase';

  const form = document.getElementById('signin-form') as HTMLFormElement;
  const emailInput = document.getElementById('email') as HTMLInputElement;
  const passwordInput = document.getElementById('password') as HTMLInputElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const magicLinkBtn = document.getElementById('magic-link-btn') as HTMLButtonElement;
  const messageDiv = document.getElementById('auth-message') as HTMLDivElement;

  function showMessage(text: string, isError = false) {
    messageDiv.textContent = text;
    messageDiv.className = `message ${isError ? 'error' : 'success'}`;
    messageDiv.classList.remove('hidden');
  }

  function setLoading(loading: boolean) {
    submitBtn.disabled = loading;
    const btnText = submitBtn.querySelector('.btn-text') as HTMLElement;
    const btnLoading = submitBtn.querySelector('.btn-loading') as HTMLElement;
    if (loading) {
      btnText.classList.add('hidden');
      btnLoading.classList.remove('hidden');
    } else {
      btnText.classList.remove('hidden');
      btnLoading.classList.add('hidden');
    }
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    setLoading(true);
    messageDiv.classList.add('hidden');

    const email = emailInput.value.trim();
    const password = passwordInput.value;

    try {
      const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password,
      });

      if (error) {
        showMessage(error.message, true);
        setLoading(false);
        return;
      }

      if (data.user) {
        // Check if user has accepted confidentiality agreement
        const { data: agreement } = await supabase
          .from('confidentiality_agreements')
          .select('*')
          .eq('user_id', data.user.id)
          .single();

        if (agreement) {
          // Already agreed, redirect to document
          window.location.href = '/confidential/architecture';
        } else {
          // Need to accept agreement
          window.location.href = '/confidential/agreement';
        }
      }
    } catch (err) {
      showMessage('An unexpected error occurred. Please try again.', true);
      setLoading(false);
    }
  });

  magicLinkBtn.addEventListener('click', async () => {
    const email = emailInput.value.trim();
    
    if (!email) {
      showMessage('Please enter your email address first.', true);
      emailInput.focus();
      return;
    }

    magicLinkBtn.disabled = true;
    magicLinkBtn.textContent = 'Sending...';

    try {
      const { error } = await supabase.auth.signInWithOtp({
        email,
        options: {
          emailRedirectTo: `${window.location.origin}/confidential/agreement`,
        },
      });

      if (error) {
        showMessage(error.message, true);
      } else {
        showMessage('Check your email for the magic link!');
      }
    } catch (err) {
      showMessage('Failed to send magic link. Please try again.', true);
    }

    magicLinkBtn.disabled = false;
    magicLinkBtn.innerHTML = `
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
        <polyline points="22,6 12,13 2,6"/>
      </svg>
      Send Magic Link
    `;
  });

  // Check if already signed in
  supabase.auth.getSession().then(({ data: { session } }) => {
    if (session) {
      window.location.href = '/confidential/agreement';
    }
  });
</script>

<style>
  .auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f5f5f7 0%, #e8e8ed 100%);
    padding: var(--space-4);
  }

  .auth-card {
    background: white;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    padding: var(--space-10);
    width: 100%;
    max-width: 420px;
  }

  .auth-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .logo-link {
    display: inline-block;
    margin-bottom: var(--space-4);
  }

  .logo {
    width: 48px;
    height: 48px;
  }

  .auth-header h1 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-2);
    color: var(--color-text);
  }

  .subtitle {
    color: var(--color-text-secondary);
    font-size: var(--font-size-base);
    margin: 0;
  }

  .message {
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-sm);
  }

  .message.error {
    background: #fef2f2;
    color: #dc2626;
    border: 1px solid #fecaca;
  }

  .message.success {
    background: #f0fdf4;
    color: #16a34a;
    border: 1px solid #bbf7d0;
  }

  .message.hidden {
    display: none;
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-group label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text);
  }

  .form-group input {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: var(--font-size-base);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px var(--color-primary-subtle);
  }

  .btn-submit {
    background: var(--color-primary);
    color: white;
    border: none;
    padding: var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    cursor: pointer;
    transition: all var(--duration-normal) var(--ease-out);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  .btn-submit:hover:not(:disabled) {
    background: var(--color-primary-dark);
  }

  .btn-submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .btn-text.hidden,
  .btn-loading.hidden {
    display: none;
  }

  .btn-loading {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .spinner {
    width: 18px;
    height: 18px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .auth-divider {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin: var(--space-6) 0;
  }

  .auth-divider::before,
  .auth-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--color-border-light);
  }

  .auth-divider span {
    color: var(--color-text-tertiary);
    font-size: var(--font-size-sm);
  }

  .btn-magic-link {
    width: 100%;
    background: white;
    color: var(--color-text);
    border: 1px solid var(--color-border);
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    cursor: pointer;
    transition: all var(--duration-normal) var(--ease-out);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  .btn-magic-link:hover:not(:disabled) {
    background: var(--color-background-secondary);
    border-color: var(--color-border);
  }

  .btn-magic-link:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .auth-footer {
    margin-top: var(--space-8);
    text-align: center;
  }

  .auth-footer p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
  }

  .auth-footer a {
    color: var(--color-primary);
    font-weight: var(--font-weight-medium);
  }

  .security-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    color: var(--color-text-tertiary) !important;
  }
</style>
