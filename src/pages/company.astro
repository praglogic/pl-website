---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Company | Pragmatic Logic" description="Building emotionally intelligent AI that amplifies human compassion in healthcare. Meet the team creating the future of senior mental health care.">
  <Navigation />

  <!-- Hero Section -->
  <section class="about-hero">
    <div class="container">
      <div class="hero-content">
        <div class="company-logo">
          <img src="/images/pragmatic-logic-logo.png" alt="Pragmatic Logic - Human Ingenuity + AI Symbiosis" class="company-logo-img" />
