---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Pragmatic Logic - Symbiotic AI for Healthcare" description="Clinical-grade therapeutic AI that reduces crisis interventions by 40% while keeping families connected. Lilo Solace - our flagship multi-agent platform for senior mental health.">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">
          Every Senior Deserves to Feel
          <span class="highlight-text">Heard, Understood, and Valued</span>
        </h1>
        
        <p class="hero-subtitle">
