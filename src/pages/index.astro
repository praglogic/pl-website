import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Pragmatic Logic - Symbiotic AI for Healthcare" description="Clinical-grade therapeutic AI that reduces crisis interventions by 40% while keeping families connected. Lilo Solace - our flagship multi-agent platform for senior mental health.">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="hero" role="banner" aria-labelledby="hero-title">
    <div class="container">
      <div class="hero-content">
        <div class="apple-hero-headline">
          <h1 id="hero-title" class="hero-title-apple">
            Every Senior Deserves More Than Care‚Äî<br>
            <span class="hero-emphasis">They Deserve Purpose and Belonging.</span>
          </h1>
        </div>
        
        <div class="apple-hero-subtitle">
          <p class="subtitle-intro">Behind every data point is a person.</p>
          <p class="subtitle-main">Lilo Solace combines <span class="subtitle-highlight">clinical precision</span> with <span class="subtitle-highlight">genuine empathy</span>‚Äî</p>
          <div class="philosophy-statement">
            <p class="philosophy-text">Because technology should <span class="philosophy-highlight">amplify</span> human connection, <span class="philosophy-emphasis">not replace it.</span></p>
