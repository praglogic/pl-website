    document.body.style.overflow = 'hidden';
  }

  function closeDemoModal() {
    document.getElementById('demoModal').style.display = 'none';
    document.body.style.overflow = 'auto';
  }

  // Close modal when clicking outside
  window.onclick = function(event) {
    const modal = document.getElementById('demoModal');
    if (event.target === modal) {
      closeDemoModal();
    }
  }

  // Close modal with Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      closeDemoModal();
    }
  });

  // Technical Details Toggle
  function toggleTechnicalDetails() {
    const content = document.getElementById('technicalContent');
    const toggle = document.querySelector('.disclosure-toggle');
    
    if (content.classList.contains('expanded')) {
      content.classList.remove('expanded');
      toggle.classList.remove('active');
      toggle.querySelector('span').textContent = 'View Technical Details';
    } else {
      content.classList.add('expanded');
      toggle.classList.add('active');
      toggle.querySelector('span').textContent = 'Hide Technical Details';
    }
  }
</script>

