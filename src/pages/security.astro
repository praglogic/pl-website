  <Navigation />
  
  <section class="security-hero">
    <div class="container">
      <div class="hero-content">
        <div class="security-badge">
          <span class="badge-icon">üõ°Ô∏è</span>
          <span class="badge-text">HIPAA Compliant & Secure</span>
        </div>
        
        <h1>Healthcare-Grade Security</h1>
        <p class="hero-subtitle">
          Comprehensive data protection and HIPAA compliance built into every aspect of the Lilo Solace platform.
        </p>
        
        <div class="compliance-badges">
          <div class="badge">HIPAA ¬ß164.312 Compliant</div>
          <div class="badge">SOC 2 Type II Ready</div>
          <div class="badge">AES-256 Encryption</div>
        </div>
      </div>
    </div>
  </section>

  <!-- HIPAA Compliance -->
  <section class="hipaa-section">
    <div class="container">
      <h2>HIPAA Compliance Framework</h2>
